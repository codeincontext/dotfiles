{
  "editor.fontFamily": "Operator Mono SSm Lig, monospace",
  "editor.fontLigatures": true,
  "editor.fontWeight": "300",
  "editor.fontSize": 13,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.rulers": [80, 100, 120],
  "editor.minimap.maxColumn": 80,
  "editor.wrappingIndent": "none",
  "workbench.fontAliasing": "antialiased",
  "workbench.colorTheme": "Gatito Theme",
  "files.trimTrailingWhitespace": true,
  "css.lint.duplicateProperties": "warning",
  "terminal.external.osxExec": "iTerm.app",
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true,
    "suppressWelcomeNotice": true
  },
  "gitlens.keymap": "chorded",
  "html.format.wrapLineLength": 80,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "editor.minimap.enabled": false,
  // "eslint.autoFixOnSave": true,
  // "[javascript]": {
  //     "editor.formatOnSave": true
  // },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "window.newWindowDimensions": "maximized",
  "workbench.startupEditor": "newUntitledFile",
  "editor.suggest.localityBonus": true,
  "editor.minimap.renderCharacters": false,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.showTabs": false, // trialling this
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "explorer.sortOrder": "mixed",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "codemetrics.basics.ComplexityTemplate": "cx: {0}. {1}",
  "codemetrics.basics.DecorationModeEnabled": false,
  "codemetrics.basics.ComplexityLevelLowDescription": "",
  "codemetrics.basics.ComplexityLevelNormalDescription": "Hmm",
  "codemetrics.basics.ComplexityLevelHighDescription": "Uh oh",
  "codemetrics.basics.ComplexityLevelExtremeDescription": "omg",
  "codemetrics.basics.CodeLensHiddenUnder": 5,
  "provisionlens.highlighting": false,
  "codemetrics.nodeconfiguration.ReturnStatement": 0.1,
  "codemetrics.nodeconfiguration.JsxElement": 0.1,
  "codemetrics.nodeconfiguration.JsxSelfClosingElement": 0.1,
  "vscode-neovim.neovimPath": "/usr/local/bin/nvim",
  "workbench.editor.limit.enabled": true,
  "editor.semanticHighlighting.enabled": true,
  "eslint.packageManager": "yarn",
  // TODO: might be able to avoid this with a central eslint config, even if empty
  "eslint.workingDirectories": [
    "./apollo",
    "./frontend",
    "./web/apollo",
    "./web/frontend"
  ],
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "terminal.integrated.scrollback": 10000,
  "terminals.multiplexer": "tmux",
  "spacecode.checkVimConfig": false,
  "editor.scrollBeyondLastLine": false,
  "vspacecode.checkVimConfig": false,
  "prettier.packageManager": "yarn",
  "vim.easymotion": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [" "],
      "commands": ["vspacecode.space"]
    },
    {
      "before": ["<space>"],
      "commands": ["vspacecode.space"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [" "],
      "commands": ["vspacecode.space"]
    },
    {
      "before": ["<space>"],
      "commands": ["vspacecode.space"]
    }
  ],
  "vspacecode.bindingOverrides": [
    {
      "keys": "f.f",
      "name": "Open file/folder",
      "type": "command",
      "command": "file-browser.open"
    }
  ],
  "files.associations": {
    "*.prisma": "prisma"
  },
  "terminal.integrated.shell.osx": "/usr/local/bin/fish",
  "typescript.tsserver.log": "off",
  "cSpell.userWords": ["vercel"],
  "git.autofetch": true,
  "typescript.implementationsCodeLens.enabled": true,
  "javascript.referencesCodeLens.showOnAllFunctions": true,
  "javascript.referencesCodeLens.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "editor.inlineSuggest.enabled": true,
  "workbench.editorAssociations": {
    "git-rebase-todo": "default"
  }
  // "editor.suggestSelection": "recentlyUsedByPrefix",
}
